<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/massive"
    android:layout_marginStart="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/name_imageView"
            android:layout_width="@dimen/field_thumbnail_size"
            android:layout_height="@dimen/field_thumbnail_size"
            android:src="@drawable/ic_perm_identity_black_24"
            style="@style/AppTheme.ImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/first_name_edit"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="First"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/name_imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/name_imageView"
            android:layout_marginBottom="@dimen/margin_medium"

        />

        <EditText
            android:id="@+id/last_name_edit"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="Last"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/name_imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_imageView"
            android:layout_marginTop="@dimen/margin_large"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="@dimen/margin_large">

        <ImageView
            android:id="@+id/phone_imageView"
            style="@style/AppTheme.ImageView"
            android:layout_width="@dimen/field_thumbnail_size"
            android:layout_height="@dimen/field_thumbnail_size"
            android:src="@drawable/ic_phone_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/phone_edit"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="Phone"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/phone_imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/phone_imageView"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:layout_marginTop="@dimen/margin_large">

        <ImageView
            android:id="@+id/email_imageView"
            style="@style/AppTheme.ImageView"
            android:layout_width="@dimen/field_thumbnail_size"
            android:layout_height="@dimen/field_thumbnail_size"
            android:src="@drawable/ic_email_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/email_edit"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="Email"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/email_imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/email_imageView"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginTop="@dimen/margin_large">

        <ImageView
            android:id="@+id/address_imageView"
            style="@style/AppTheme.ImageView"
            android:layout_width="@dimen/field_thumbnail_size"
            android:layout_height="@dimen/field_thumbnail_size"
            android:src="@drawable/ic_place_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/address_edit"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="Address"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/address_imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/address_imageView"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address"
        android:layout_marginTop="@dimen/margin_large">

        <ImageView
            android:id="@+id/website_imageView"
            style="@style/AppTheme.ImageView"
            android:layout_width="@dimen/field_thumbnail_size"
            android:layout_height="@dimen/field_thumbnail_size"
            android:src="@drawable/ic_place_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/website_edit"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="Website"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/website_imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/website_imageView"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/save_btn"
        style="@style/AppTheme.ContactForm.Button"
        android:layout_width="@dimen/field_width"
        android:layout_height="wrap_content"
        android:text="Save Contact"
        android:layout_marginTop="@dimen/margin_xxlarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/website"/>

</androidx.constraintlayout.widget.ConstraintLayout>