<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView  android:id="@+id/profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/massive"/>
    <TextView
        android:id="@+id/contact_name"
        style="@style/AppTheme.ContactInfo.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Name"
        android:textSize="@dimen/contact_name_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_pic"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"/>
    <HorizontalScrollView
        android:id="@+id/chip_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_name"
        android:layout_marginTop="20dp">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium">
            <com.google.android.material.chip.Chip
                android:id="@+id/call_chip"
                style="@style/AppTheme.ContactInfo.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                app:chipIcon="@drawable/ic_phone_black_24dp"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/text_chip"
                style="@style/AppTheme.ContactInfo.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                app:chipIcon="@drawable/ic_textsms_black_24dp"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/email_chip"
                style="@style/AppTheme.ContactInfo.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                app:chipIcon="@drawable/ic_email_black_24dp"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/map_chip"
                style="@style/AppTheme.ContactInfo.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map"
                app:chipIcon="@drawable/ic_place_black_24dp"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/web_chip"
                style="@style/AppTheme.ContactInfo.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web"
                app:chipIcon="@drawable/ic_public_black_24dp"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/phone_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chip_scroll"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/phone_imageView"
            android:layout_width="@dimen/info_thumbnail_size"
            android:layout_height="@dimen/info_thumbnail_size"
            android:src="@drawable/ic_phone_black_24dp"
            style="@style/AppTheme.ImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/margin_medium"/>
        <TextView
            android:id="@+id/phone_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.ContactInfo.TextView"
            android:text="(000) 000 0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>
    <View
        style="@style/AppTheme.ContactInfo.HorizontalDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_info"
        android:layout_marginTop="@dimen/margin_medium"/>
    <LinearLayout
        android:id="@+id/email_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_info"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/email_imageView"
            android:layout_width="@dimen/info_thumbnail_size"
            android:layout_height="@dimen/info_thumbnail_size"
            android:src="@drawable/ic_email_black_24dp"
            style="@style/AppTheme.ImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/margin_medium"/>
        <TextView
            android:id="@+id/email_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.ContactInfo.TextView"
            android:text="(000) 000 0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>
    <View
        style="@style/AppTheme.ContactInfo.HorizontalDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_info"
        android:layout_marginTop="@dimen/margin_medium"/>

    <LinearLayout
        android:id="@+id/map_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_info"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/map_imageView"
            android:layout_width="@dimen/info_thumbnail_size"
            android:layout_height="@dimen/info_thumbnail_size"
            android:src="@drawable/ic_place_black_24dp"
            style="@style/AppTheme.ImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/margin_medium"/>
        <TextView
            android:id="@+id/map_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.ContactInfo.TextView"
            android:text="(000) 000 0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>
    <View
        style="@style/AppTheme.ContactInfo.HorizontalDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_info"
        android:layout_marginTop="@dimen/margin_medium"/>
    <LinearLayout
        android:id="@+id/web_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_info"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/web_imageView"
            android:layout_width="@dimen/info_thumbnail_size"
            android:layout_height="@dimen/info_thumbnail_size"
            android:src="@drawable/ic_public_black_24dp"
            style="@style/AppTheme.ImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/margin_medium"/>
        <TextView
            android:id="@+id/web_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.ContactInfo.TextView"
            android:text="(000) 000 0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>
    <View
        style="@style/AppTheme.ContactInfo.HorizontalDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/web_info"
        android:layout_marginTop="@dimen/margin_medium"/>


</androidx.constraintlayout.widget.ConstraintLayout>